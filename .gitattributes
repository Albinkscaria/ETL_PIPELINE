# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Markdown files
*.md text eol=lf

# JSON files
*.json text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Docker files
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Large files
*.pdf filter=lfs diff=lfs merge=lfs -text
